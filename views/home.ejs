<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/stylesheets/style.css">

</head>
<body>
    <nav>
        <a href="/task/add">add Task</a>
    </nav>
    <div>
        <table class="table-bordered">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Student Name</th>
                    <th scope="col">Task's Name</th>
                    <th scope="col">Task's Subject</th>
                    <th scope="col">Teacher's Name</th>
                    <th scope="col">Task's Progress</th>
                    <th scope="col">Deadline</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
              <% data.forEach(el => { %>
                <tr>
                  <td scope="row"><%= el.id %></td>
                  <td><%= el.name %></td>
                  <td><%= el.Task.taskName %></td>
                  <td><%= el.Task.taskSubject %></td>
                  <td><%= el.Teacher.name %></td>
                  <td>
                      <div class="progress">
                          <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                      </div>
                  </td>
                  <td><%= formatDeadline(el.Task.deadline) %></td>
                  <td>
                      <a href="/task/<%= el.id %>/edit">Edit Progress</a>
                      <button type="button" class="btn btn-delete">Change Task</button>
                    </td>
              </tr>
              <% }) %>  
            </tbody>
        </table>
    </div>

</body>
</html>